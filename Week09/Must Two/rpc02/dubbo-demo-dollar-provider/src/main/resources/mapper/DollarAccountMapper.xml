<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.kimmking.dubbo.demo.dollarprovider.mapper.DollarAccountMapper">


    <update id="subPriceById">
        update dollar_account set price = price-#{price} where id = #{id} and price >= #{price}
    </update>

    <update id="updatePriceInt">
        update dollar_account set price = price+#{price} where user_id = #{userid}
    </update>

    <select id="selectByUserid" resultType="io.kimmking.dubbo.demo.dollarprovider.entity.DollarAccount">
        select * from dollar_account where user_id = #{userid}
    </select>
</mapper>